%section.section
  .container
    .columns.is-centered
      .column.is-4
        %h2.title.is-2 Sign up
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.error_notification
          .field
            .control 
              = f.input :email, required: true, autofocus: true, input_html: { class: 'input', autocomplete: 'email' }, |
                wrapper: false, label_html: { class: 'label' }
          .field
            .control
              = f.input :password, required: true, input_html: { class: 'input', autocomplete: 'new-password'}, |                                     
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), wrapper: false, |
                label_html: { class: 'label' }
          .field
            .control
              = f.input :password_confirmation, required: true, input_html: { class: 'input', autocomplete: 'new-password' }, |
                wrapper: false, label_html: { class: 'label' }
          .field
            .control
              = f.button :submit, 'Sign up', class: 'button is-medium is-primary'
          %br
          = render 'devise/shared/links'
