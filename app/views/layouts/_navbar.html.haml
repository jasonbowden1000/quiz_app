%nav{class: 'navbar has-background-primary ', role: 'navigation', 'aria-label': 'main navigation'}
  .navbar-brand
    = link_to root_path, class: 'navbar-item' do
      %h1.title.is-5.has-text-white
        = Rails.configuration.application_name
    %a{role: 'button', class: 'navbar-burger burger', 'aria-label': 'menu', 'aria-expanded': 'false', 'data-target': 'quizAppNavbar'}
      %span{'aria-hidden': 'true'}
      %span{'aria-hidden': 'true'}
      %span{'aria-hidden': 'true'}
  #quizAppNavbar.navbar-menu
    .navbar-start
      %a.navbar-item Home
      %a.navbar-item Documentation
      .navbar-item.has-dropdown.is-hoverable
        %a.navbar-link More
        .navbar-dropdown
          %a.navbar-item About
          %a.navbar-item Contact
          %a.navbar-item I shop class make small fuzzball
    .navbar-end
      .navbar-item
        .field.is-grouped
          - if user_signed_in?
            = link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'navbar-item' 
          - else 
            = link_to 'Log In', new_user_session_path, class: 'navbar-item is-link'
            = link_to 'Sign Up', new_user_registration_path, class: 'navbar-item is-link'
                