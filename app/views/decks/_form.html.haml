= simple_form_for(@deck) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .field
    .control
      = f.input :title, required: true, autofocus: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }
  .field
    .control
      = f.input :description, as: :text, required: true, autofocus: true, input_html: { class: "input", rows: 6 }, wrapper: false, label_html: { class: "label" }
  = f.button :submit, class: "button is-primary"
