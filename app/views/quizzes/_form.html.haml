= simple_form_for(@quiz) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  = debug @quiz.errors

  .form-inputs
    = f.input :title
    = f.input :description

    = f.association :decks, as: :check_boxes

  .form-actions
    = f.button :submit
